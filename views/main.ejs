        <tr>
            <th>번호</th>
            <th>그룹이름</th>
            <th>방장이름</th>
            <th>생성날짜</th>
        </tr>
        <%
        for(var i = 0; i < results.length; i++)
        {
        %>
        <tr>
            <td><%= i + 1 %></td>
            <td>
                <a onclick="moveToChat('<%= results[i].GROUPID %>', '<%= results[i].GROUPNAME %>')"><%= results[i].GROUPNAME %></a>
            </td>
            <td><%= results[i].NAME %></td>
            <td><%= results[i].CREATEDATE %></td>
        </tr>
        <%
        }
        %>
    </table>

</div>

</body>

<script type="text/javascript">
    function moveToChat(id, name) {
        var inputpassword = prompt("비밀번호 입력")
        $.ajax({
            url: '/group/grouppwd',
            type: 'POST',
            data: {
                groupid: id,
                password: inputpassword
            },
            success: function (result) {
                if (result.isok)
                    location.href = "/group/?id=" + id + "&name=" + name;
                else {
                    alert("로그인 실패")
                }
            }
        });
    }
    function logout() {
        location.href = "/logout";
    }
    function createGroup() {
        var groupname = prompt("그룹 이름 입력");
        var password = prompt("비밀번호 입력")
        if (groupname != null) {
            console.log("그룹생성완료")
            $.ajax({
                url: '/group/create',
                type: 'POST',
                data: {
                    groupname: groupname,
                    password: password
                },
                success: function (result) {
                    location.href = "/group/?id=" + result.groupid + "&name=" + result.groupname;
                }
            });
        }
    }
    function moveToCLASSPAGE(i) {
        $.ajax({
            url: '/board/getboardid',
            type: 'POST',
            data: {
                id: i
            },
            success: function (result) {
                var data = {
                    boardid: result[0].BOARDID
                }
                location.href = "/class/page/?cid=" + i + "&id=" + data.boardid;
            }
        });
    }


</script>


</html>
