<% include header.ejs %>

<style>
    .messageform {
        position: fixed;
        overflow-x: hidden;
        overflow-y: auto;
    }
    .panel-success {
        width: 777px;
        height: 300px;
        top: 0;
        bottom: 0;
        margin: 0;
    }
</style>
<body>

<div class="container">
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
                        data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">Home</a>
            </div>

            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li class="active">
                        <a href="/scheduler">시간표</a>
                    </li>
                    <li>
                        <a href="/calendar">달력</a>
                    </li>
                    <li>
                        <a href="#" onclick="createGroup()">그룹생성</a>
                    </li>
                    <li>
                        <a href="/messages">쪽지함</a>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="/logout" onclick="return confirm('로그아웃 하시겠습니까?')">로그아웃</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="row" style="padding-bottom: 10%">
        <ul class="nav nav-pills nav-justified">
            <li><h3 class="glyphicon glyphicon-pencil"> <%= class_info.c_Name %></h3></li>
            <li><h3 class="glyphicon glyphicon-user"> <%= class_info.c_Prof %></h3></li>
            <li><h3 class="glyphicon glyphicon-time"> <%= class_info.c_Day %></h3></li>
            <li><h3> <%= class_info.c_Time %></h3></li>
        </ul>
    </div>
    <div class="row">
        <div class="panel panel-success">
            <div class="panel-heading">
                <h3 id="viewtitle" class="panel-title">제목</h3>
            </div>
            <div id="writer" style=" border-bottom: .5px solid rgb(214, 240, 217);" class="panel-body">작성자</div>
            <div id="viewcontent" class="panel-body">
                내용
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-8">
            <table class="table table-bordered table-hover" style="margin-top: 20%">
                <tr>
                    <th>번호</th>
                    <th>제목</th>
                    <th>작성자</th>
                    <th>날짜</th>
                </tr>
                <%
                for(var i = 0; i < results.length; i++)
                {
                %>
                <tr href="#" onclick="view('<%= results[i].PTI %>', '<%= results[i].PCO %>', '<%= results[i].PW %>')">
                    <td><%= i + 1 %></td>
                    <td><%= results[i].PTI %></td>
                    <td><%= results[i].PW %></td>
                    <td><%= results[i].PT %></td>
                </tr>
                <%
                }
                %>
            </table>
        </div>
        <div class="col-xs-4">

            <form class="messageform" method="post" action="/class/write">
                <div class="form-group">
                    <label>제목</label>
                    <input type="text" class="form-control" id="title" name="title" placeholder="title">
                </div>
                <div class="form-group">
                    <label>내용</label>
                    <textarea style="border: 1px solid #f2f2f2; border-radius:5px;"rows="10" cols="50" class="form-control" id="contents" name="contents"
                              placeholder="Contents"></textarea>
                </div>
                <input type="hidden" name="boardid" value="<%= boardid %>">
                <input type="hidden" name="classid" value="<%= class_info.c_id %>">

                <button type="submit" class="btn btn-default">Submit</button>
            </form>
        </div>
    </div>
</div>
</body>

<script type="text/javascript">
    function logout() {
        location.href = "/logout";
    }
    function createGroup() {
        var groupname = prompt("그룹 이름 입력");
        var password = prompt("비밀번호 입력")
        if (groupname != null) {
            console.log("그룹생성완료")
            $.ajax({
                url: '/group/create',
                type: 'POST',
                data: {
                    groupname: groupname,
                    password: password
                },
                success: function (result) {
                    location.href = "/group/?id=" + result.groupid + "&name=" + result.groupname;
                }
            });
        }
    }
    function view(posttitle, postcontent, writer) {
        $("#viewtitle").html(posttitle)
        $("#writer").html(writer)
        $("#viewcontent").html(postcontent)
    }
</script>

</html>
